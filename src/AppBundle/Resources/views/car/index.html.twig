{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Cars</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-chart-bar"></i>
                        Cars list
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Make</th>
                                <th>Model</th>
                                <th>Produced at</th>
                                <th>Engine size</th>
                                <th>Price</th>D
                                <th>Categories</th>D
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for car in cars %}
                                <tr>
                                    <td>{{ car.make }}</td>
                                    <td>{{ car.model }}</td>
                                    <td>{% if car.producedAt %}{{ car.producedAt|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ car.engineSize }}</td>
                                    <td>{{ car.price }}</td>
                                    <td>
                                        {% for category in car.categories %}
                                            {{ category.name }}
                                        {% if not loop.last %} , {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>{{ car.isActive?'Yes':'No'}}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('car_show', { 'id': car.id }) }}" class="btn btn-dark"><i class="fa fa-eye"></i></a>
                                            <a href="{{ path('car_edit', { 'id': car.id }) }}" class="btn btn-dark"><i class="fa fa-pen"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a class="btn btn-primary" href="{{ path('car_new') }}">Create car</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
