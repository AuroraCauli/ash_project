{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Car Category</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-chart-bar"></i>
                        {% if carCategory.id %}Edit{% else %}Create{% endif %} Car Categories
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-4">
                                    <p>Name</p>
                                </div>
                                <div class="col-8">
                                    <div class="form-group">
                                        <div class="form-label-group">
                                            {{ form_widget(form.name, {'attr': {"class": "form-control"}}) }}
                                            <label for="">Enter name of category</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-right">
                                    <button class="btn btn-success btn-lg" type="submit">Save</button>
                                </div>
                            </div>
                        </form>

                        {% if carCategory.id %}
                            {{ form_start(delete_form) }}   <input type="submit" value="Delete" class="btn btn-danger"> {{ form_end(delete_form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

